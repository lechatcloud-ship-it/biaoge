<Window x:Class="BiaogPlugin.UI.LayerSelectionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="图层选择 - 标哥插件" Height="550" Width="500"
        WindowStartupLocation="CenterScreen"
        Topmost="True"
        ResizeMode="NoResize"
        Background="#1E1E1E">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 标题区域 -->
        <StackPanel Grid.Row="0" Margin="0,0,0,15">
            <TextBlock Text="选择要翻译的图层" FontSize="18" FontWeight="Bold"
                       Foreground="White"/>
            <TextBlock x:Name="SummaryText" Text="共0个图层" FontSize="12"
                       Foreground="#CCCCCC" Margin="0,5,0,0"/>
        </StackPanel>

        <!-- 操作按钮区域 -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
            <Button Content="全选" Width="80" Height="30" Margin="0,0,10,0"
                    Click="SelectAllButton_Click"
                    Background="#333333" Foreground="White" BorderThickness="1" BorderBrush="#555555"/>
            <Button Content="反选" Width="80" Height="30" Margin="0,0,10,0"
                    Click="InvertSelectionButton_Click"
                    Background="#333333" Foreground="White" BorderThickness="1" BorderBrush="#555555"/>
            <Button Content="清空" Width="80" Height="30"
                    Click="ClearSelectionButton_Click"
                    Background="#333333" Foreground="White" BorderThickness="1" BorderBrush="#555555"/>
        </StackPanel>

        <!-- 图层列表 -->
        <Border Grid.Row="2" BorderBrush="#3F3F46" BorderThickness="1">
            <ListBox x:Name="LayersListBox"
                     Background="#252526"
                     Foreground="White"
                     BorderThickness="0"
                     ScrollViewer.VerticalScrollBarVisibility="Auto"
                     SelectionMode="Multiple">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border Padding="8,5" Background="Transparent">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- 复选框 -->
                                <CheckBox Grid.Column="0"
                                          IsChecked="{Binding IsSelected}"
                                          VerticalAlignment="Center"
                                          Margin="0,0,10,0"/>

                                <!-- 图层名称 -->
                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding LayerName}"
                                               FontWeight="Bold"
                                               Foreground="#4EC9B0"/>
                                    <TextBlock FontSize="10" Foreground="#888">
                                        <Run Text="颜色: "/><Run Text="{Binding ColorName}"/>
                                        <Run Text="  "/><Run Text="{Binding StatusText}"/>
                                    </TextBlock>
                                </StackPanel>

                                <!-- 文本数量 -->
                                <TextBlock Grid.Column="2"
                                           Text="{Binding TextCount}"
                                           FontSize="16"
                                           FontWeight="Bold"
                                           Foreground="White"
                                           VerticalAlignment="Center"
                                           Margin="10,0"/>

                                <TextBlock Grid.Column="3"
                                           Text="个文本"
                                           FontSize="11"
                                           Foreground="#888"
                                           VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>

                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        <Setter Property="Padding" Value="0"/>
                        <Setter Property="Margin" Value="0"/>
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                        <Setter Property="BorderBrush" Value="#3F3F46"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2D2D30"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </ListBox.ItemContainerStyle>
            </ListBox>
        </Border>

        <!-- 选中信息 -->
        <StackPanel Grid.Row="3" Margin="0,15,0,0">
            <TextBlock x:Name="SelectionInfoText"
                       Text="未选择任何图层"
                       Foreground="#CCCCCC"
                       FontSize="12"/>
        </StackPanel>

        <!-- 按钮区域 -->
        <StackPanel Grid.Row="4" Orientation="Horizontal"
                    HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="翻译选中图层" Width="120" Height="35" Margin="0,0,10,0"
                    Click="TranslateButton_Click"
                    Background="#0078D4" Foreground="White" BorderThickness="0"/>
            <Button Content="取消" Width="100" Height="35"
                    Click="CancelButton_Click"
                    Background="#333333" Foreground="White" BorderThickness="1" BorderBrush="#555555"/>
        </StackPanel>
    </Grid>
</Window>
