<Window x:Class="BiaogPlugin.UI.CacheManagementDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="缓存管理 - 标哥插件" Height="500" Width="600"
        WindowStartupLocation="CenterScreen"
        Topmost="True"
        ResizeMode="NoResize"
        Background="#1E1E1E">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 标题区域 -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="翻译缓存管理" FontSize="18" FontWeight="Bold"
                       Foreground="White"/>
            <TextBlock Text="查看和管理翻译缓存数据库" FontSize="12"
                       Foreground="#CCCCCC" Margin="0,5,0,0"/>
        </StackPanel>

        <!-- 内容区域 -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- 缓存统计 -->
                <TextBlock Text="缓存统计" FontSize="14" FontWeight="Bold"
                           Foreground="White" Margin="0,0,0,10"/>
                <Border Background="#252526" Padding="20" Margin="0,0,0,20" CornerRadius="3">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- 数据库大小 -->
                        <TextBlock Grid.Row="0" Grid.Column="0"
                                   Text="数据库大小:"
                                   Foreground="#CCCCCC"
                                   Margin="0,5"/>
                        <TextBlock Grid.Row="0" Grid.Column="1"
                                   x:Name="DatabaseSizeText"
                                   Text="计算中..."
                                   Foreground="White"
                                   FontWeight="Bold"
                                   Margin="0,5"/>

                        <!-- 缓存条目数 -->
                        <TextBlock Grid.Row="1" Grid.Column="0"
                                   Text="缓存条目数:"
                                   Foreground="#CCCCCC"
                                   Margin="0,5"/>
                        <TextBlock Grid.Row="1" Grid.Column="1"
                                   x:Name="CacheCountText"
                                   Text="计算中..."
                                   Foreground="White"
                                   FontWeight="Bold"
                                   Margin="0,5"/>

                        <!-- 命中率 -->
                        <TextBlock Grid.Row="2" Grid.Column="0"
                                   Text="缓存命中率:"
                                   Foreground="#CCCCCC"
                                   Margin="0,5"/>
                        <TextBlock Grid.Row="2" Grid.Column="1"
                                   x:Name="HitRateText"
                                   Text="计算中..."
                                   Foreground="#4EC9B0"
                                   FontWeight="Bold"
                                   Margin="0,5"/>

                        <!-- 最后更新时间 -->
                        <TextBlock Grid.Row="3" Grid.Column="0"
                                   Text="最后更新:"
                                   Foreground="#CCCCCC"
                                   Margin="0,5"/>
                        <TextBlock Grid.Row="3" Grid.Column="1"
                                   x:Name="LastUpdateText"
                                   Text="未知"
                                   Foreground="#888"
                                   Margin="0,5"/>

                        <!-- 数据库路径 -->
                        <TextBlock Grid.Row="4" Grid.Column="0"
                                   Text="数据库路径:"
                                   Foreground="#CCCCCC"
                                   Margin="0,5"
                                   VerticalAlignment="Top"/>
                        <TextBlock Grid.Row="4" Grid.Column="1"
                                   x:Name="DatabasePathText"
                                   Text="未知"
                                   Foreground="#888"
                                   TextWrapping="Wrap"
                                   Margin="0,5"/>
                    </Grid>
                </Border>

                <!-- 缓存操作 -->
                <TextBlock Text="缓存操作" FontSize="14" FontWeight="Bold"
                           Foreground="White" Margin="0,0,0,10"/>
                <Border Background="#252526" Padding="20" Margin="0,0,0,20" CornerRadius="3">
                    <StackPanel>
                        <!-- 清除全部缓存 -->
                        <Border BorderBrush="#3F3F46" BorderThickness="0,0,0,1" Padding="0,0,0,15" Margin="0,0,0,15">
                            <StackPanel>
                                <TextBlock Text="清除所有缓存"
                                           FontWeight="Bold"
                                           Foreground="White"
                                           Margin="0,0,0,5"/>
                                <TextBlock Text="删除所有翻译缓存数据，释放磁盘空间"
                                           FontSize="11"
                                           Foreground="#888"
                                           TextWrapping="Wrap"
                                           Margin="0,0,0,10"/>
                                <Button Content="清除全部缓存"
                                        Width="150"
                                        Height="32"
                                        HorizontalAlignment="Left"
                                        Click="ClearAllCacheButton_Click"
                                        Background="#D13438"
                                        Foreground="White"
                                        BorderThickness="0"/>
                            </StackPanel>
                        </Border>

                        <!-- 清除过期缓存 -->
                        <Border BorderBrush="#3F3F46" BorderThickness="0,0,0,1" Padding="0,0,0,15" Margin="0,0,0,15">
                            <StackPanel>
                                <TextBlock Text="清除过期缓存"
                                           FontWeight="Bold"
                                           Foreground="White"
                                           Margin="0,0,0,5"/>
                                <TextBlock Text="只删除超过30天的缓存条目"
                                           FontSize="11"
                                           Foreground="#888"
                                           TextWrapping="Wrap"
                                           Margin="0,0,0,10"/>
                                <Button Content="清除过期缓存"
                                        Width="150"
                                        Height="32"
                                        HorizontalAlignment="Left"
                                        Click="ClearExpiredCacheButton_Click"
                                        Background="#333333"
                                        Foreground="White"
                                        BorderThickness="1"
                                        BorderBrush="#555555"/>
                            </StackPanel>
                        </Border>

                        <!-- 优化数据库 -->
                        <StackPanel>
                            <TextBlock Text="优化数据库"
                                       FontWeight="Bold"
                                       Foreground="White"
                                       Margin="0,0,0,5"/>
                            <TextBlock Text="执行VACUUM操作，重建数据库索引，提高查询速度"
                                       FontSize="11"
                                       Foreground="#888"
                                       TextWrapping="Wrap"
                                       Margin="0,0,0,10"/>
                            <Button Content="优化数据库"
                                    Width="150"
                                    Height="32"
                                    HorizontalAlignment="Left"
                                    Click="OptimizeDatabaseButton_Click"
                                    Background="#0078D4"
                                    Foreground="White"
                                    BorderThickness="0"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- 按钮区域 -->
        <StackPanel Grid.Row="2" Orientation="Horizontal"
                    HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="刷新统计" Width="100" Height="35" Margin="0,0,10,0"
                    Click="RefreshButton_Click"
                    Background="#333333" Foreground="White" BorderThickness="1" BorderBrush="#555555"/>
            <Button Content="关闭" Width="100" Height="35"
                    Click="CloseButton_Click"
                    Background="#0078D4" Foreground="White" BorderThickness="0"/>
        </StackPanel>
    </Grid>
</Window>
