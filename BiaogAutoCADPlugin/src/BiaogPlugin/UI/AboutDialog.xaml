<Window x:Class="BiaogPlugin.UI.AboutDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="关于工具 - 标哥工具" Height="550" Width="500"
        WindowStartupLocation="CenterScreen"
        Topmost="True"
        ResizeMode="NoResize"
        Background="#1E1E1E">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 标题区域 -->
        <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,20,0,30">
            <TextBlock Text="标哥" FontSize="32" FontWeight="Bold"
                       Foreground="White" HorizontalAlignment="Center"/>
            <TextBlock Text="建筑工程AI智能CAD工具" FontSize="14"
                       Foreground="#CCCCCC" HorizontalAlignment="Center" Margin="0,5,0,0"/>
            <TextBlock x:Name="VersionText" Text="版本 1.0.0" FontSize="12"
                       Foreground="#888888" HorizontalAlignment="Center" Margin="0,10,0,0"/>
        </StackPanel>

        <!-- 内容区域 -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="10,0">
                <!-- 核心功能 -->
                <TextBlock Text="核心功能" FontSize="16" FontWeight="Bold"
                           Foreground="White" Margin="0,0,0,10"/>
                <StackPanel Margin="15,0,0,15">
                    <TextBlock Foreground="#CCCCCC" Margin="0,3" TextWrapping="Wrap">
                        <Run Text="✓ 标哥AI助手" FontWeight="Bold"/>
                        <LineBreak/>
                        <Run Text="  Agent架构，智能调度专用模型" FontSize="11" Foreground="#888"/>
                    </TextBlock>
                    <TextBlock Foreground="#CCCCCC" Margin="0,3" TextWrapping="Wrap">
                        <Run Text="✓ AI智能翻译" FontWeight="Bold"/>
                        <LineBreak/>
                        <Run Text="  qwen-mt-flash，支持92种语言" FontSize="11" Foreground="#888"/>
                    </TextBlock>
                    <TextBlock Foreground="#CCCCCC" Margin="0,3" TextWrapping="Wrap">
                        <Run Text="✓ 构件识别算量" FontWeight="Bold"/>
                        <LineBreak/>
                        <Run Text="  qwen3-vl-flash，超高精度识别" FontSize="11" Foreground="#888"/>
                    </TextBlock>
                    <TextBlock Foreground="#CCCCCC" Margin="0,3" TextWrapping="Wrap">
                        <Run Text="✓ 多格式导出" FontWeight="Bold"/>
                        <LineBreak/>
                        <Run Text="  支持Excel/PDF格式" FontSize="11" Foreground="#888"/>
                    </TextBlock>
                    <TextBlock Foreground="#CCCCCC" Margin="0,3" TextWrapping="Wrap">
                        <Run Text="✓ 智能缓存" FontWeight="Bold"/>
                        <LineBreak/>
                        <Run Text="  90%+命中率，大幅提升速度" FontSize="11" Foreground="#888"/>
                    </TextBlock>
                </StackPanel>

                <!-- 技术优势 -->
                <TextBlock Text="技术优势" FontSize="16" FontWeight="Bold"
                           Foreground="White" Margin="0,10,0,10"/>
                <StackPanel Margin="15,0,0,15">
                    <TextBlock Text="✓ 100%准确的DWG读取（AutoCAD官方引擎）"
                               Foreground="#CCCCCC" Margin="0,3"/>
                    <TextBlock Text="✓ 无缝集成AutoCAD工作流"
                               Foreground="#CCCCCC" Margin="0,3"/>
                    <TextBlock Text="✓ 符合建筑行业标准"
                               Foreground="#CCCCCC" Margin="0,3"/>
                    <TextBlock Text="✓ 基于AutoCAD .NET API开发"
                               Foreground="#CCCCCC" Margin="0,3"/>
                </StackPanel>

                <!-- 项目信息 -->
                <TextBlock Text="项目信息" FontSize="16" FontWeight="Bold"
                           Foreground="White" Margin="0,10,0,10"/>
                <StackPanel Margin="15,0,0,15">
                    <TextBlock Foreground="#CCCCCC" Margin="0,3">
                        <Run Text="开发者: "/>
                        <Run Text="Excellent" FontWeight="Bold"/>
                    </TextBlock>
                    <TextBlock Foreground="#CCCCCC" Margin="0,3">
                        <Run Text="许可证: "/>
                        <Run Text="商业软件" FontWeight="Bold"/>
                    </TextBlock>
                    <TextBlock Foreground="#CCCCCC" Margin="0,3" TextWrapping="Wrap">
                        <Run Text="GitHub: "/>
                        <Hyperlink NavigateUri="https://github.com/lechatcloud-ship-it/biaoge"
                                   RequestNavigate="Hyperlink_RequestNavigate"
                                   Foreground="#0078D4">
                            github.com/lechatcloud-ship-it/biaoge
                        </Hyperlink>
                    </TextBlock>
                </StackPanel>

                <!-- 版权信息 -->
                <TextBlock Text="版权所有 © 2025 深圳市赋昌庭科技有限公司"
                           FontSize="11" Foreground="#666666"
                           HorizontalAlignment="Center" Margin="0,20,0,0"/>
            </StackPanel>
        </ScrollViewer>

        <!-- 按钮区域 -->
        <StackPanel Grid.Row="2" Orientation="Horizontal"
                    HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button Content="查看帮助" Width="100" Height="35" Margin="0,0,10,0"
                    Click="HelpButton_Click"
                    Background="#333333" Foreground="White" BorderThickness="1" BorderBrush="#555555"/>
            <Button Content="关闭" Width="100" Height="35"
                    Click="CloseButton_Click"
                    Background="#0078D4" Foreground="White" BorderThickness="0"/>
        </StackPanel>
    </Grid>
</Window>
