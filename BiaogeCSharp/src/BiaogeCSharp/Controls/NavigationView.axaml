<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="BiaogeCSharp.Controls.NavigationView">

    <UserControl.Styles>
        <Style Selector="ListBoxItem">
            <Setter Property="Height" Value="40"/>
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Margin" Value="5"/>
        </Style>

        <Style Selector="ListBoxItem:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="#3E3E42"/>
        </Style>

        <Style Selector="ListBoxItem:selected /template/ ContentPresenter">
            <Setter Property="Background" Value="#0078D4"/>
        </Style>

        <Style Selector="ListBoxItem TextBlock">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
    </UserControl.Styles>

    <Grid ColumnDefinitions="200,*">
        <!-- 左侧导航栏 -->
        <Border Grid.Column="0" Background="#2D2D30" BorderBrush="#3E3E42" BorderThickness="0,0,1,0">
            <DockPanel>
                <!-- 顶部导航项 -->
                <ListBox Name="TopNavigationList"
                         DockPanel.Dock="Top"
                         Background="Transparent"
                         BorderThickness="0"
                         SelectionMode="Single"
                         SelectionChanged="OnNavigationSelectionChanged">
                </ListBox>

                <!-- 底部导航项 -->
                <ListBox Name="BottomNavigationList"
                         DockPanel.Dock="Bottom"
                         Background="Transparent"
                         BorderThickness="0"
                         SelectionMode="Single"
                         SelectionChanged="OnNavigationSelectionChanged">
                </ListBox>
            </DockPanel>
        </Border>

        <!-- 右侧内容区 -->
        <Border Grid.Column="1" Background="#1E1E1E">
            <ContentControl Name="ContentArea" />
        </Border>
    </Grid>
</UserControl>
