<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:BiaogeCSharp.ViewModels"
             xmlns:controls="using:BiaogeCSharp.Controls"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
             x:DataType="vm:CalculationViewModel"
             x:Class="BiaogeCSharp.Views.CalculationPage">

    <Grid Background="{DynamicResource BrushBgPrimary}" RowDefinitions="Auto,*,Auto">
        <!-- 顶部控制区 -->
        <Border Grid.Row="0"
                Background="{DynamicResource BrushBgElevated}"
                Padding="24,16"
                BorderBrush="{DynamicResource BrushBorder}"
                BorderThickness="0,0,0,1"
                Effect="{DynamicResource ShadowSM}">
            <StackPanel Spacing="16">
                <!-- 识别模式选择 -->
                <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="12">
                    <TextBlock Grid.Column="0"
                              Text="识别模式"
                              Foreground="{DynamicResource BrushTextPrimary}"
                              FontSize="14"
                              VerticalAlignment="Center"/>
                    <ComboBox Grid.Column="1"
                             Classes="modern"
                             SelectedIndex="0"
                             MinWidth="200"
                             HorizontalAlignment="Left">
                        <ComboBoxItem Content="超高精度识别 (99.9999%)"/>
                        <ComboBoxItem Content="标准识别"/>
                        <ComboBoxItem Content="快速识别"/>
                    </ComboBox>

                    <Button Grid.Column="2"
                            Classes="modern"
                            Content="开始识别"
                            Command="{Binding StartRecognitionCommand}"
                            Height="40"
                            Padding="24,0"/>
                </Grid>

                <!-- 过滤选项 -->
                <StackPanel Orientation="Horizontal" Spacing="20">
                    <CheckBox Content="仅显示有效构件"
                             Foreground="{DynamicResource BrushTextPrimary}"
                             IsChecked="True"/>
                    <CheckBox Content="显示低置信度"
                             Foreground="{DynamicResource BrushTextPrimary}"/>
                    <CheckBox Content="显示验证错误"
                             Foreground="{DynamicResource BrushTextPrimary}"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- 中间：结果表格 -->
        <Border Grid.Row="1" Margin="24">
            <DataGrid Name="ResultsDataGrid"
                     ItemsSource="{Binding Results}"
                     Background="Transparent"
                     GridLinesVisibility="None"
                     BorderBrush="{DynamicResource BrushBorder}"
                     BorderThickness="1"
                     CornerRadius="8"
                     CanUserReorderColumns="True"
                     CanUserResizeColumns="True"
                     CanUserSortColumns="True"
                     AutoGenerateColumns="False"
                     HeadersVisibility="Column">

                <DataGrid.Columns>
                    <DataGridTextColumn Header="类型" Width="150" Binding="{Binding Type}"/>
                    <DataGridTextColumn Header="数量" Width="100" Binding="{Binding Quantity}"/>
                    <DataGridTextColumn Header="体积 (m³)" Width="120" Binding="{Binding Volume, StringFormat='{}{0:F2}'}"/>
                    <DataGridTextColumn Header="面积 (m²)" Width="120" Binding="{Binding Area, StringFormat='{}{0:F2}'}"/>
                    <DataGridTextColumn Header="费用 (¥)" Width="120" Binding="{Binding Cost, StringFormat='{}{0:F2}'}"/>
                    <DataGridTextColumn Header="状态" Width="100" Binding="{Binding Status}"/>
                    <DataGridTextColumn Header="置信度" Width="100" Binding="{Binding ConfidenceDisplay}"/>
                </DataGrid.Columns>

                <DataGrid.Styles>
                    <Style Selector="DataGridColumnHeader">
                        <Setter Property="Background" Value="{DynamicResource BrushBgTertiary}"/>
                        <Setter Property="Foreground" Value="{DynamicResource BrushTextSecondary}"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Setter Property="FontSize" Value="14"/>
                        <Setter Property="Padding" Value="12,10"/>
                        <Setter Property="Height" Value="44"/>
                    </Style>

                    <Style Selector="DataGridRow">
                        <Setter Property="Background" Value="{DynamicResource BrushBgSecondary}"/>
                        <Setter Property="Height" Value="48"/>
                        <Setter Property="Transitions">
                            <Transitions>
                                <BrushTransition Property="Background" Duration="0:0:0.15"/>
                            </Transitions>
                        </Setter>
                    </Style>

                    <Style Selector="DataGridRow:pointerover /template/ Rectangle#BackgroundRectangle">
                        <Setter Property="Fill" Value="{DynamicResource BrushBorder}"/>
                    </Style>

                    <Style Selector="DataGridRow:selected /template/ Rectangle#BackgroundRectangle">
                        <Setter Property="Fill" Value="{DynamicResource BrushBrandPrimary}"/>
                    </Style>

                    <Style Selector="DataGridCell">
                        <Setter Property="Foreground" Value="{DynamicResource BrushTextPrimary}"/>
                        <Setter Property="FontSize" Value="13"/>
                    </Style>
                </DataGrid.Styles>
            </DataGrid>
        </Border>

        <!-- 底部：统计和操作 -->
        <Border Grid.Row="2"
                Background="{DynamicResource BrushBgElevated}"
                Padding="24,16"
                BorderBrush="{DynamicResource BrushBorder}"
                BorderThickness="0,1,0,0">
            <Grid ColumnDefinitions="*,Auto">
                <!-- 左侧统计 -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="32">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <TextBlock Text="总构件数:"
                                  Foreground="{DynamicResource BrushTextSecondary}"
                                  FontSize="14"/>
                        <TextBlock Text="{Binding TotalComponents}"
                                  Foreground="{DynamicResource BrushTextPrimary}"
                                  FontSize="14"
                                  FontWeight="SemiBold"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <TextBlock Text="有效构件:"
                                  Foreground="{DynamicResource BrushTextSecondary}"
                                  FontSize="14"/>
                        <TextBlock Text="{Binding ValidComponents}"
                                  Foreground="{DynamicResource BrushSuccess}"
                                  FontSize="14"
                                  FontWeight="SemiBold"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <TextBlock Text="总费用:"
                                  Foreground="{DynamicResource BrushTextSecondary}"
                                  FontSize="14"/>
                        <TextBlock Text="{Binding TotalCost, StringFormat='¥{0:F2}'}"
                                  Foreground="{DynamicResource BrushInfo}"
                                  FontSize="14"
                                  FontWeight="SemiBold"/>
                    </StackPanel>
                </StackPanel>

                <!-- 右侧操作按钮 -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="12">
                    <Button Classes="modern"
                            Content="生成报告"
                            Command="{Binding GenerateReportCommand}"
                            Height="40"
                            Padding="24,0"/>

                    <Button Classes="secondary"
                            Content="导出Excel"
                            Command="{Binding ExportToExcelCommand}"
                            Height="40"
                            Padding="24,0"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
