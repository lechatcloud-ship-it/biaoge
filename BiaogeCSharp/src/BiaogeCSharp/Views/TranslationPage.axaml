<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:BiaogeCSharp.ViewModels"
             xmlns:controls="using:BiaogeCSharp.Controls"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
             x:DataType="vm:TranslationViewModel"
             x:Class="BiaogeCSharp.Views.TranslationPage">

    <ScrollViewer Background="{DynamicResource BrushBgPrimary}">
        <StackPanel Margin="24">
            <!-- 卡片1: 语言选择 -->
            <controls:CardWidget Title="选择目标语言">
                <controls:CardWidget.CardContent>
                    <StackPanel Spacing="16">
                        <TextBlock Text="目标语言"
                                  Foreground="{DynamicResource BrushTextSecondary}"
                                  FontSize="14"
                                  Margin="0,0,0,8"/>
                        <ComboBox Classes="modern"
                                 ItemsSource="{Binding TargetLanguages}"
                                 SelectedItem="{Binding SelectedTargetLanguage}"
                                 DisplayMemberBinding="{Binding Name}"
                                 MinWidth="200"
                                 FontSize="14"/>

                        <TextBlock Text="翻译模式"
                                  Foreground="{DynamicResource BrushTextSecondary}"
                                  FontSize="14"
                                  Margin="0,8,0,8"/>
                        <ComboBox Classes="modern"
                                 SelectedIndex="0"
                                 MinWidth="200"
                                 FontSize="14">
                            <ComboBoxItem Content="标准翻译"/>
                            <ComboBoxItem Content="专业术语优先"/>
                            <ComboBoxItem Content="保留原文格式"/>
                        </ComboBox>
                    </StackPanel>
                </controls:CardWidget.CardContent>
            </controls:CardWidget>

            <!-- 卡片2: 翻译控制 -->
            <controls:CardWidget Title="翻译控制">
                <controls:CardWidget.CardContent>
                    <StackPanel Spacing="20">
                        <!-- 操作按钮 -->
                        <Grid ColumnDefinitions="*,*" ColumnSpacing="12">
                            <Button Grid.Column="0"
                                    Classes="modern"
                                    Content="开始翻译"
                                    Command="{Binding StartTranslationCommand}"
                                    IsEnabled="{Binding !IsTranslating}"
                                    Height="40"
                                    HorizontalAlignment="Stretch"/>

                            <Button Grid.Column="1"
                                    Classes="secondary"
                                    Content="停止翻译"
                                    IsEnabled="{Binding IsTranslating}"
                                    Height="40"
                                    HorizontalAlignment="Stretch"/>
                        </Grid>

                        <!-- 进度条 -->
                        <ProgressBar Classes="modern"
                                    Value="{Binding Progress}"
                                    Maximum="100"
                                    IsVisible="{Binding IsTranslating}"/>

                        <!-- 状态文本 -->
                        <TextBlock Text="{Binding StatusText}"
                                  Foreground="{DynamicResource BrushTextPrimary}"
                                  FontSize="14"
                                  TextAlignment="Center"/>
                    </StackPanel>
                </controls:CardWidget.CardContent>
            </controls:CardWidget>

            <!-- 卡片3: 翻译统计 -->
            <controls:CardWidget Title="翻译统计">
                <controls:CardWidget.CardContent>
                    <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto" RowSpacing="16">
                        <!-- 总文本数 -->
                        <Grid Grid.Row="0" ColumnDefinitions="*,Auto">
                            <TextBlock Grid.Column="0"
                                      Text="总文本数"
                                      Foreground="{DynamicResource BrushTextSecondary}"
                                      FontSize="14"/>
                            <TextBlock Grid.Column="1"
                                      Text="{Binding TotalTexts}"
                                      Foreground="{DynamicResource BrushTextPrimary}"
                                      FontSize="14"
                                      FontWeight="SemiBold"/>
                        </Grid>

                        <!-- 已翻译 -->
                        <Grid Grid.Row="1" ColumnDefinitions="*,Auto">
                            <TextBlock Grid.Column="0"
                                      Text="已翻译"
                                      Foreground="{DynamicResource BrushTextSecondary}"
                                      FontSize="14"/>
                            <TextBlock Grid.Column="1"
                                      Text="{Binding TranslatedTexts}"
                                      Foreground="{DynamicResource BrushSuccess}"
                                      FontSize="14"
                                      FontWeight="SemiBold"/>
                        </Grid>

                        <!-- 缓存命中 -->
                        <Grid Grid.Row="2" ColumnDefinitions="*,Auto">
                            <TextBlock Grid.Column="0"
                                      Text="缓存命中"
                                      Foreground="{DynamicResource BrushTextSecondary}"
                                      FontSize="14"/>
                            <TextBlock Grid.Column="1"
                                      Text="{Binding CacheHits}"
                                      Foreground="{DynamicResource BrushInfo}"
                                      FontSize="14"
                                      FontWeight="SemiBold"/>
                        </Grid>

                        <!-- 跳过的 -->
                        <Grid Grid.Row="3" ColumnDefinitions="*,Auto">
                            <TextBlock Grid.Column="0"
                                      Text="跳过的"
                                      Foreground="{DynamicResource BrushTextSecondary}"
                                      FontSize="14"/>
                            <TextBlock Grid.Column="1"
                                      Text="{Binding SkippedTexts}"
                                      Foreground="{DynamicResource BrushWarning}"
                                      FontSize="14"
                                      FontWeight="SemiBold"/>
                        </Grid>

                        <!-- 耗时 -->
                        <Grid Grid.Row="4" ColumnDefinitions="*,Auto">
                            <TextBlock Grid.Column="0"
                                      Text="耗时"
                                      Foreground="{DynamicResource BrushTextSecondary}"
                                      FontSize="14"/>
                            <TextBlock Grid.Column="1"
                                      Text="{Binding ElapsedTime}"
                                      Foreground="{DynamicResource BrushInfo}"
                                      FontSize="14"
                                      FontWeight="SemiBold"/>
                        </Grid>
                    </Grid>
                </controls:CardWidget.CardContent>
            </controls:CardWidget>
        </StackPanel>
    </ScrollViewer>
</UserControl>
