<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:controls="using:BiaogeCSharp.Controls"
             xmlns:materialIcons="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="BiaogeCSharp.Views.HomePage"
             DragDrop.AllowDrop="True">

    <DockPanel Background="{DynamicResource BrushBgPrimary}">
        <!-- 顶部快捷操作栏 -->
        <Border DockPanel.Dock="Top"
                Background="{DynamicResource BrushBgElevated}"
                Padding="24,16"
                BorderBrush="{DynamicResource BrushBorder}"
                BorderThickness="0,0,0,1"
                Effect="{DynamicResource ShadowSM}">
            <StackPanel Orientation="Horizontal" Spacing="12">
                <Button Name="OpenFileButton"
                        Classes="modern"
                        Content="打开DWG文件"
                        Height="40"
                        Click="OnOpenFileClick"/>

                <Button Classes="secondary"
                        Content="最近文件"
                        Height="40"/>

                <Button Classes="text"
                        Content="帮助文档"
                        Height="40"/>
            </StackPanel>
        </Border>

        <!-- DWG查看器和拖放区域 -->
        <Grid>
            <controls:DwgCanvas Name="DwgViewer" Document="{Binding CurrentDocument}"/>

            <!-- 空状态拖放提示 (当没有文件时显示) -->
            <Border Name="EmptyStateOverlay"
                    IsVisible="{Binding CurrentDocument, Converter={x:Static ObjectConverters.IsNull}}"
                    Background="{DynamicResource BrushBgPrimary}"
                    DragDrop.AllowDrop="True">
                <Border Background="{DynamicResource BrushAcrylicCard}"
                        BorderBrush="{DynamicResource BrushBorder}"
                        BorderThickness="2"
                        BorderDashArray="8,4"
                        CornerRadius="12"
                        Padding="48"
                        Margin="48"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                    <StackPanel Spacing="24" HorizontalAlignment="Center">
                        <materialIcons:MaterialIcon Kind="FileDocumentOutline"
                                                   Width="64"
                                                   Height="64"
                                                   Foreground="{DynamicResource BrushTextSecondary}"
                                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="拖放DWG文件到此处"
                                  FontSize="24"
                                  FontWeight="SemiBold"
                                  Foreground="{DynamicResource BrushTextPrimary}"
                                  HorizontalAlignment="Center"/>
                        <TextBlock Text="或点击下方按钮打开文件"
                                  FontSize="14"
                                  Foreground="{DynamicResource BrushTextSecondary}"
                                  HorizontalAlignment="Center"/>
                        <Button Classes="modern"
                                Content="选择DWG文件"
                                Height="44"
                                Padding="32,0"
                                FontSize="15"
                                Click="OnOpenFileClick"
                                HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </Border>
        </Grid>
    </DockPanel>
</UserControl>
